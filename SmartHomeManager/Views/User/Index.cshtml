@model IEnumerable<SmartHomeManager.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h2 class="text-center mb-5 text-dark">Users List</h2>

<div class="col-md-12">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card shadow-lg rounded-4 hover-shadow-lg border-dark">
                    <div class="card-header bg-gradient text-white text-center p-3 rounded-top">
                        <h5 class="card-title text-dark">@user.UserName</h5>
                    </div>

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <strong>Email:</strong>
                            <span class="font-weight-bold">@user.Email</span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <strong>Phone Number:</strong>
                            @if (string.IsNullOrEmpty(user.PhoneNumber))
                            {
                                <span>Null</span>
                            }
                            else
                            {
                                @user.PhoneNumber
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <strong>Lockout Status:</strong>
                            @if (user.LockoutEnabled)
                            {
                                <span class="badge bg-success">Locked</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Unlocked</span>
                            }
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-outline-info btn-sm w-48">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<div class="container mt-5">
    <div class="text-center mb-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #000000;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .hover-shadow-lg:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .bg-gradient {
        background: linear-gradient(90deg, #6c7ae0, #4f5d73);
    }

    .w-48 {
        width: 48%;
    }

    .btn-outline-info {
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge {
        font-size: 0.9rem;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">