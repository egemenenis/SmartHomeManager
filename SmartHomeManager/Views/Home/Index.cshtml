@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary">Welcome to the Smart Home Manager!</h1>
                <p class="lead text-muted mb-4">Your central hub to control and monitor all your smart home devices. Easily manage your home environment, security, and more!</p>
                <p class="text-muted mb-5">Explore and manage your smart home system with just a few clicks!</p>
            </div>


            <div class="d-flex justify-content-center mb-5 gap-4">
                <div class="card shadow-lg border-0 rounded-4">
                    <a href="@Url.Action("CreateDevice", "Device")" class="btn btn-outline-primary btn-lg px-4 py-3 w-100 rounded-4">
                        <i class="fas fa-plus-circle"></i> Create Device
                    </a>
                </div>
                <div class="card shadow-lg border-0 rounded-4">
                    <a href="@Url.Action("Index", "Device")" class="btn btn-outline-primary btn-lg px-4 py-3 w-100 rounded-4">
                        <i class="fas fa-cogs"></i> Devices
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-header bg-dark text-white text-center rounded-top">
                            <h4>Manage Devices</h4>
                        </div>
                        <div class="card-body text-center">
                            <p>Control your smart devices, set schedules, and more.</p>
                            <a href="/Manage/Index" class="btn btn-outline-primary btn-lg mt-auto rounded-4">Go to Manage</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-header bg-dark text-white text-center rounded-top">
                            <h4>Manage Users</h4>
                        </div>
                        <div class="card-body text-center">
                            <p>Manage users, assign roles and permissions, and control access.</p>
                            <a href="/User/Index" class="btn btn-outline-primary btn-lg mt-auto rounded-4">Go to Users</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-header bg-dark text-white text-center rounded-top">
                            <h4>Security Settings</h4>
                        </div>
                        <div class="card-body text-center">
                            <p>Set up security protocols, cameras, and alerts for your home.</p>
                            <a href="/Security/Index" class="btn btn-outline-primary btn-lg mt-auto rounded-4">Go to Security</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <p class="text-muted mb-4">Experience the future of smart home technology.</p>
                <a href="@Url.Action("LearnMore", "Home")" class="btn btn-outline-primary btn-lg px-4 py-3 rounded-pill shadow-lg">Learn More</a>
            </div>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

<style>
    .card-header {
        background: linear-gradient(90deg, #6c7ae0, #4f5d73);
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .card-body {
        padding: 2rem;
    }

    .card:hover {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-10px);
    }

    .btn-outline-primary:hover,
    .btn-outline-secondary:hover {
        background-color: #4f5d73;
        color: #fff;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-lg {
        font-size: 1.2rem;
    }

    .text-muted {
        font-size: 1rem;
    }

    .bg-gradient {
        background: linear-gradient(90deg, #6c7ae0, #4f5d73);
    }

    .shadow-lg {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
</style>